function rebash()
{
select rebashchoice in "Reset Source" "Update" "List Upgrades" "Upgrade" "Select Best Source"
do
	case "$rebashchoice" in
		"Reset Source")
			clear
			source ~/.bashrc || return
		return
		;;
		"Update")
			sudo aptitude update || return
		return
		;;
		"List Upgrades")
			sudo apt list --upgradeable
		return
		;;
		"Upgrade")
			select upgradechoice in "Safe-Upgrade" "Full-Upgrade"
				do
					case "$upgradechoice" in
						"Safe-Upgrade")
							sudo apt upgrade || return
							return
						;;
						"Full-Upgrade")
							sudo apt full-upgrade || return
							return
						;;
					esac
				done
		return
		;;
		"Select Best Source")
			cd ~/GIT
			if ls "sources.list"
				then
					echo "Removing old sources"
					rm sources.list
				else
					echo "old sources.list not found"
				fi
			echo "Creating new sources list"
			sudo netselect-apt -sn
		return
		;;
	esac
done
}
